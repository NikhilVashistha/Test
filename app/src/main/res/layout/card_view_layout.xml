<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:tag="cards main container"
            android:weightSum="5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="3.8">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_panorma"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textAllCaps="false"
                        android:layout_gravity="start"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/poperty_info_btn_panorama"
                        android:layout_marginLeft="10dp"
                        tools:text="vote"

                        />

                    <ImageButton
                        android:id="@+id/btn_ariel_view"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textAllCaps="false"
                        android:layout_gravity="start"
                        android:background="@android:color/transparent"
                        android:src="@drawable/poperty_info_btn_aerial_view"
                        android:layout_marginLeft="10dp"
                        tools:text="vote"

                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/image_is_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"
                    android:layout_gravity="end|bottom"
                    tools:visibility="visible"
                    android:visibility="gone"
                    />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_weight=".8">

                <TextView
                    android:id="@+id/tv_property_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    tools:text="Property Name"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    tools:text="Address"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_for_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    tools:text="For Sale Now"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight=".4"
                android:padding="8dp"
                android:background="@color/black"
                >

                <TextView
                    android:id="@+id/tv_developer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    tools:text="Developer: Nam Fung"
                    android:layout_gravity="left"
                    android:textColor="@color/color_white"
                    android:textSize="14sp"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    tools:text="00"
                    android:textColor="@color/color_white"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/ic_msg_g"
                    android:drawablePadding="5dp"
                    android:layout_gravity="right"
                    android:layout_weight=".7"/>

                <TextView
                    android:id="@+id/tv_favor_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    tools:text="00"
                    android:textColor="@color/color_white"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/ic_heart_small_g"
                    android:drawablePadding="5dp"
                    android:layout_gravity="right"
                    android:layout_weight=".7"/>

            </LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>